<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ncopado.milogllamadas.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/llamadas"
        android:textSize="25dp"
        android:layout_gravity="center"


        />
    
    <Button
        android:id="@+id/btnMostrarllamdas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mostrar_llamadas"
        android:onClick="mostrarLlamada"
        />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tvLlamadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
